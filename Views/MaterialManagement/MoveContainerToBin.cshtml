@model KQF.Floor.Web.Models.MaterialPostModel

@if (!String.IsNullOrEmpty(Model.Message))
{
    <div class="row p-2 m-2">
        <div class="col-12 alert @(Model.IsSuccess ? "alert-success": "alert-danger")">
            @Model.Message
        </div>
    </div>
}

<form method="post">

    <div class="row mt-2 mb-3">
        <div class="col-12">
            <h3>Material Management: Move entire container to a Bin</h3>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-sm-12 col-md-12 p-2 bg-light">
            <label for="exampleFormControlInput1" class="form-label">Source Container</label>
            <input type="text" class="form-control initial-focus" name="@Html.NameFor(x=> x.Source)" placeholder="Container #" value="@Model.Source">
        </div>
    </div>
    <div class="row m-2">
        <div class="col-1 offset-5">
            <h2>
                <i class="gg-arrow-down"></i>
            </h2>
        </div>
        <div class="w-100"></div>
        <div class="col-sm-12 col-md-12 bg-light p-2">
            <label for="exampleFormControlInput1" class="form-label">Destination Bin</label>
            <input type="text" class="form-control" name="@Html.NameFor(x=> x.Destination)" placeholder="Bin #" value="@Model.Destination">
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-8 offset-2">
            <button type="submit" class="btn btn-lg btn-primary w-100">Post</button>
        </div>
    </div>
</form>

@section scripts{
    <script type="text/javascript">
        $(document).ready(() => {
            var inputs = $("form :input");

            $(inputs).not(":button").keypress(function (e) {
                if (e.keyCode == 13) {
                    inputs[inputs.index(this) + 1].focus();
                    return false;
                }
            });
        });
    </script>
}